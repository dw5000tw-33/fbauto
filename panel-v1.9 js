    <div class="log" id="log"></div>
    <details id="devBox" style="display:none;"><summary>DEV 模式：手動貼上核心（主機不可用時）</summary>
      <div class="hint">請將 <b>real-core.js</b> 全文貼在下面，再按「注入並開始」。只在本機執行，不會上傳。</div>
      <textarea id="devCore" placeholder="// 貼上 real-core.js 內容…"></textarea>
      <div style="display:flex;gap:8px;margin-top:8px"><button class="btn dark" id="devInject">注入並開始</button></div>
    </details>
  </div>`;
document.body.appendChild(wrap);

// helpers
const $=s=>wrap.querySelector(s);
const logBox=$('#log');
const log=(...a)=>{logBox.textContent+=a.join(' ')+'\n';logBox.scrollTop=logBox.scrollHeight;};
const pad=n=>String(n).padStart(2,'0');
function tick(){const d=new Date();$('#nowTime').textContent=`現在時間：${d.getFullYear()}-${pad(d.getMonth()+1)}-${pad(d.getDate())} ${pad(d.getHours())}:${pad(d.getMinutes())}:${pad(d.getSeconds())}`;}
tick();const clock=setInterval(tick,1000);

// DEBUG toggle
let DEBUG=false;
function setDebug(on){DEBUG=!!on;try{localStorage.setItem('FBDEL_DEBUG',DEBUG?'1':'0');}catch{};const box=document.getElementById('devBox');if(box)box.style.display=DEBUG?'block':'none';try{log('🔧 DEBUG =',DEBUG?'ON':'OFF');}catch{}}
try{if(localStorage.getItem('FBDEL_DEBUG')==='1')setDebug(true);}catch{}

// UI buttons
$('#minBtn').onclick=()=>{const b=$('#bodyBox');const hide=b.style.display!=='none';b.style.display=hide?'none':'block';$('#minBtn').textContent=hide?'展開':'最小化';};
$('#close').onclick=()=>{try{clearInterval(clock);}catch{};wrap.remove();};
$('#openLine').onclick=()=>window.open('https://line.me/R/ti/p/@307momvl','_blank');

// drag
(function(){const hdr=$('#dragHdr');let sx=0,sy=0,ox=0,oy=0,drag=false;hdr.addEventListener('pointerdown',e=>{if(e.target.closest('button'))return;drag=true;hdr.setPointerCapture(e.pointerId);sx=e.clientX;sy=e.clientY;const r=wrap.getBoundingClientRect();ox=r.left;oy=r.top;e.preventDefault();});hdr.addEventListener('pointermove',e=>{if(!drag)return;const dx=e.clientX-sx,dy=e.clientY-sy;wrap.style.left=Math.max(0,ox+dx)+'px';wrap.style.top=Math.max(0,oy+dy)+'px';wrap.style.right='auto';wrap.style.bottom='auto';wrap.style.position='fixed';});const end=()=>{drag=false;};hdr.addEventListener('pointerup',end);hdr.addEventListener('pointercancel',end);})();

// prefill name (best effort)
try{const guess=Array.from(document.querySelectorAll('a[aria-label$="的動態時報"], a[aria-label*="profile"], a[role="link"] span.html-span')).map(e=>e.textContent?.trim()).find(s=>s&&s.length<=50);if(guess)$('#name').value=guess;}catch{}

// stop flag
let abortFlag=false;$('#stop').onclick=()=>{abortFlag=true;log('🟠 已要求停止');};

// mode UI
function updateModeUI(){const m=$('#mode').value;if(m==='shop'){$('#nameLabel').textContent='商品關鍵字（可多個：逗號 / 空白 / 換行 分隔）';$('#name').placeholder='例：潭子 好市多 三房';}else{$('#nameLabel').textContent='你的名字';$('#name').placeholder='與貼文顯示一致的名稱';}}
$('#mode').addEventListener('change',updateModeUI);updateModeUI();

// inject core
function injectCoreCode(code){return new Promise((res,rej)=>{try{const blob=new Blob([code],{type:'text/javascript'});const u=URL.createObjectURL(blob);const s=document.createElement('script');s.src=u;s.onload=()=>{URL.revokeObjectURL(u);const coreFn=window.FB_DELETE_CORE||(window.FBDelCore&&typeof window.FBDelCore.start==='function'?(opts)=>window.FBDelCore.start(opts):null);if(!coreFn)return rej(new Error('核心格式不正確'));res(coreFn);};s.onerror=()=>{URL.revokeObjectURL(u);rej(new Error('Blob 腳本載入失敗'));};document.head.appendChild(s);}catch(e){rej(e);}});}
function genIdem(){return (crypto?.randomUUID&&crypto.randomUUID())||Math.random().toString(36).slice(2)+Date.now();}

// direct fetch chain
async function fetchCoreDirect(passcode){
  const r0=await fetch(INVITE_URL,{method:'POST'});
  if(!r0.ok)throw new Error('邀請票取得失敗：HTTP '+r0.status);
  const inv=await r0.json();
  if(!inv||!inv.invite)throw new Error('邀請票無效');

  const body={code:passcode.trim(),version:'v1.9',referrer:location.href,idempotencyKey:genIdem(),userAgent:navigator.userAgent};
  const r1=await fetch(VERIFY_CONFIRM_URL,{method:'POST',headers:{'Content-Type':'application/json','Authorization':'Bearer '+inv.invite},body:JSON.stringify(body)});
  if(!r1.ok)throw new Error('驗證伺服器連線失敗：HTTP '+r1.status);
  const v=await r1.json();
  if(!v||!v.ok||!v.token){const msg=(v&&(v.error||v.message))||'驗證碼無效或已過期';throw new Error(msg);}

  const r2=await fetch(CORE_API_BASE+encodeURIComponent(v.token),{cache:'no-store',mode:'cors',credentials:'omit'});
  if(!r2.ok)throw new Error('核心伺服器連線失敗：HTTP '+r2.status);
  const data=await r2.json();
  if(data.error)throw new Error(data.error);
  if(!data||!data.code)throw new Error('伺服器未回核心程式');
  return await injectCoreCode(data.code);
}

// run core
async function runCore(coreFn){
  const mode=$('#mode').value;
  const raw=$('#name').value.trim();
  const cutoff=$('#cutoff').value?new Date($('#cutoff').value+'T23:59:59'):null;
  if(!raw){alert(mode==='shop'?'請先輸入商品關鍵字':'請先輸入你的名字');return;}
  const opts={mode,myName:(mode==='group')?raw:undefined,shopKeywords:(mode==='shop')?raw.split(/[\s,，]+/).map(s=>s.trim()).filter(Boolean):undefined,maxDelete:Math.max(1,+$('#limit').value||10),maxScrollRounds:Math.max(1,+$('#scrolls').value||3),delayMin:Math.max(200,+$('#dmin').value||1000),delayMax:Math.max(+$('#dmax').value||2000,+$('#dmin').value||1000),cutoff,onLog:msg=>log(msg),shouldAbort:()=>abortFlag,logMode:'simple',consoleEcho:false};
  log('開始');
  try{await coreFn(opts);}catch(e){log('⛔ 跳過：執行錯誤（',e.message,'）');}
}

// ===== Relay：在 CSP 擋外連時改走 data: 視窗拿 core 回來 =====
function isLikelyCSP(err){const m=(err&&err.message)||String(err||'');return /Content Security Policy|Refused to connect|blocked by|Failed to fetch/i.test(m);}
function b64u(s){return btoa(unescape(encodeURIComponent(s)));} // for unicode-safe base64

function openRelayDataUrl(passcode){
  const html=`<!doctype html><meta charset="utf-8"><title>FBDel Relay</title>
<script>
(function(){
  const INV='${INVITE_URL}';
  const CON='${VERIFY_CONFIRM_URL}';
  const CORE='${CORE_API_BASE}';
  const code=${JSON.stringify(''+(passcode||''))};
  (async()=>{
    try{
      const r0=await fetch(INV,{method:'POST'});
      const inv=await r0.json();
      const body={code:code.trim(),version:'v1.9',referrer:document.referrer||location.origin,idempotencyKey:(self.crypto&&crypto.randomUUID?crypto.randomUUID():(Date.now()+'-'+Math.random())),userAgent:navigator.userAgent};
      const r1=await fetch(CON,{method:'POST',headers:{'Content-Type':'application/json','Authorization':'Bearer '+inv.invite},body:JSON.stringify(body)});
      const v=await r1.json();
      if(!v||!v.token||v.ok===false)throw new Error((v&&(v.error||v.message))||'confirm_failed');
      const r2=await fetch(CORE+encodeURIComponent(v.token),{cache:'no-store'});
      const data=await r2.json();
      if(!data||!data.code)throw new Error((data&&data.error)||'no_core');
      opener&&opener.postMessage({type:'fbdel-core',code:data.code},'*');
    }catch(e){
      opener&&opener.postMessage({type:'fbdel-error',error:(e&&e.message)||String(e)},'*');
    }finally{setTimeout(()=>close(),50);}
  })();
})();
<\/script>`;
  const w=window.open('data:text/html;base64,'+b64u(html),'fbdel_relay','width=520,height=600');
  if(!w) log('⚠️ 瀏覽器擋了彈窗，請允許此網站的彈出視窗後重試');
  else log('🌐 已啟動 Relay 視窗，正在安全取得核心…');
}

// 接收 relay 訊息
window.addEventListener('message',async(ev)=>{
  const d=ev&&ev.data||{};
  if(d.type==='fbdel-core'&&d.code){
    log('✅ Relay 已回傳核心，準備注入執行…');
    try{const core=await injectCoreCode(d.code);await runCore(core);}catch(e){log('⛔ 跳過：注入失敗（',e.message,'）');}
  }else if(d.type==='fbdel-error'){
    log('⛔ Relay 錯誤：',d.error||'未知');
  }
},false);

// start
$('#start').onclick=async()=>{
  abortFlag=false;
  const passcode=$('#passcode').value.trim();

  if(/^dev$/i.test(passcode)){setDebug(true);log('🔧 已開啟 DEV 模式');}
  if(!passcode||/^dev$/i.test(passcode)){alert('請先輸入檢核碼（從官網領取）。');return;}

  try{
    const core=await fetchCoreDirect(passcode);
    await runCore(core);
  }catch(e){
    log('⛔ 跳過：直接取核心失敗（',e.message,'）');
    if(isLikelyCSP(e)){
      log('ℹ️ 偵測到 CSP 外連限制，改用 Relay 視窗流程…');
      openRelayDataUrl(passcode);
    }else{
      if(/邀請票|驗證|核心|invalid|expired|not_found|missing/i.test(e.message)){log('ℹ️ 提示：請回官網重新取得檢核碼，或稍後再試');}
      if(DEBUG){const box=$('#devBox');box.style.display='block';try{box.open=true;}catch{};$('#devCore').focus();log('🔧 DEBUG 開啟：已顯示 DEV 備援區塊');}
    }
  }
};

// DEV 手動注入
$('#devInject').onclick=async()=>{
  const code=$('#devCore').value;
  if(!code||!code.trim()){alert('請先貼上 core 內容');return;}
  try{const core=await injectCoreCode(code);await runCore(core);}catch(e){log('⛔ 跳過：DEV 注入失敗（',e.message,'）');}
};

log('書籤面板 v1.9 就緒：輸入檢核碼 → 直接驗證 → 取核心（CSP 擋則自動 Relay）');
})();
