  // ---- å°‡æ ¸å¿ƒå­—ä¸²æ³¨å…¥æˆå¯å‘¼å«çš„å‡½å¼ ----
  function injectCoreCode(code) {
    return new Promise((res, rej) => {
      try {
        const blob = new Blob([code], { type: 'text/javascript' });
        const u = URL.createObjectURL(blob);
        const s = document.createElement('script');
        s.src = u;
        s.onload = () => {
          URL.revokeObjectURL(u);
          const coreFn =
            window.FB_DELETE_CORE ||
            (window.FBDelCore && typeof window.FBDelCore.start === 'function'
              ? (opts)=>window.FBDelCore.start(opts)
              : null);
          if (!coreFn) return rej(new Error('æ ¸å¿ƒæ ¼å¼ä¸æ­£ç¢º'));
          res(coreFn);
        };
        s.onerror = () => { URL.revokeObjectURL(u); rej(new Error('Blob è…³æœ¬è¼‰å…¥å¤±æ•—')); };
        document.head.appendChild(s);
      } catch (e) { rej(e); }
    });
  }

  // ---- ç›´æ¥ confirm â†’ æ ¸å¿ƒ ----
  function genIdem(){
    return (crypto?.randomUUID && crypto.randomUUID()) || Math.random().toString(36).slice(2)+Date.now();
  }

  async function fetchCoreDirect(passcode){
    // 1) å…ˆæ‹¿é‚€è«‹ç¥¨ï¼ˆ3 åˆ†é˜ï¼‰
    const r0 = await fetch(INVITE_URL, { method:'POST' });
    if(!r0.ok) throw new Error('é‚€è«‹ç¥¨å–å¾—å¤±æ•—ï¼šHTTP '+r0.status);
    const inv = await r0.json();
    if(!inv || !inv.invite) throw new Error('é‚€è«‹ç¥¨ç„¡æ•ˆ');

    // 2) confirm æª¢æ ¸ç¢¼ â†’ ç”¢ç”ŸçŸ­æ•ˆ tokenï¼ˆ15 åˆ†é˜ï¼‰ä¸¦å¯«å› Notion
    const body = {
      code: passcode.trim(),
      version: 'v1.9',
      referrer: location.href,
      idempotencyKey: genIdem(),
      userAgent: navigator.userAgent
    };
    const r1 = await fetch(VERIFY_CONFIRM_URL, {
      method:'POST',
      headers:{ 'Content-Type':'application/json', 'Authorization':'Bearer '+inv.invite },
      body: JSON.stringify(body)
    });
    if(!r1.ok) throw new Error('é©—è­‰ä¼ºæœå™¨é€£ç·šå¤±æ•—ï¼šHTTP '+r1.status);
    const v = await r1.json();
    if(!v || !v.ok || !v.token){
      const msg = (v && (v.error||v.message)) || 'é©—è­‰ç¢¼ç„¡æ•ˆæˆ–å·²éæœŸ';
      throw new Error(msg);
    }

    // 3) ç”¨ token å»æ‹¿æ ¸å¿ƒ
    const r2 = await fetch(CORE_API_BASE + encodeURIComponent(v.token), { cache:'no-store', mode:'cors', credentials:'omit' });
    if(!r2.ok) throw new Error('æ ¸å¿ƒä¼ºæœå™¨é€£ç·šå¤±æ•—ï¼šHTTP '+r2.status);
    const data = await r2.json();
    if(data.error) throw new Error(data.error);
    if(!data || !data.code) throw new Error('ä¼ºæœå™¨æœªå›æ ¸å¿ƒç¨‹å¼');

    // 4) æ³¨å…¥æ ¸å¿ƒ
    return await injectCoreCode(data.code);
  }

  // ---- çµ„åƒæ•¸ä¸¦åŸ·è¡Œæ ¸å¿ƒ ----
  async function runCore(coreFn){
    const mode=$('#mode').value;
    const raw=$('#name').value.trim();
    const cutoff=$('#cutoff').value ? new Date($('#cutoff').value+'T23:59:59') : null;
    if(!raw){ alert(mode==='shop'?'è«‹å…ˆè¼¸å…¥å•†å“é—œéµå­—':'è«‹å…ˆè¼¸å…¥ä½ çš„åå­—'); return; }

    const opts={
      mode,
      myName:(mode==='group')?raw:undefined,
      shopKeywords:(mode==='shop')?raw.split(/[\s,ï¼Œ]+/).map(s=>s.trim()).filter(Boolean):undefined,
      maxDelete:Math.max(1, +$('#limit').value || 10),
      maxScrollRounds:Math.max(1, +$('#scrolls').value || 3),
      delayMin:Math.max(200, +$('#dmin').value || 1000),
      delayMax:Math.max(+$('#dmax').value || 2000, +$('#dmin').value || 1000),
      cutoff,
      onLog: msg=>log(msg),
      shouldAbort: ()=>abortFlag,
      logMode:'simple',
      consoleEcho:false
    };

    log('é–‹å§‹');
    try{ await coreFn(opts); }catch(e){ log('â›” è·³éï¼šåŸ·è¡ŒéŒ¯èª¤ï¼ˆ',e.message,')'); }
  }

  // ğŸ”˜ é–‹å§‹ï¼ˆç§»é™¤ loaderï¼›ç›´æ¥ confirm â†’ coreï¼‰
  $('#start').onclick=async()=>{
    abortFlag=false;
    const passcode=$('#passcode').value.trim();

    // DEV æš—é–€
    if(/^dev$/i.test(passcode)) { setDebug(true); log('ğŸ”§ å·²é–‹å•Ÿ DEV æ¨¡å¼'); }

    // å¼·åˆ¶éœ€è¦æª¢æ ¸ç¢¼
    if(!passcode || /^dev$/i.test(passcode)) { alert('è«‹å…ˆè¼¸å…¥æª¢æ ¸ç¢¼ï¼ˆå¾å®˜ç¶²é ˜å–ï¼‰ã€‚'); return; }

    try{
      const core = await fetchCoreDirect(passcode);
      await runCore(core);
    }catch(e){
      log('â›” è·³éï¼šæ ¸å¿ƒæœªè¼‰å…¥ï¼ˆ', e.message, 'ï¼‰');
      if(/é‚€è«‹ç¥¨|é©—è­‰|æ ¸å¿ƒ|invalid|expired|not_found/i.test(e.message)){
        log('â„¹ï¸ æç¤ºï¼šè«‹å›å®˜ç¶²é‡æ–°å–å¾—æª¢æ ¸ç¢¼ï¼Œæˆ–ç¨å¾Œå†è©¦');
      }
      if(DEBUG){
        const box = $('#devBox'); box.style.display='block'; try{ box.open = true; }catch{}; $('#devCore').focus();
        log('ğŸ”§ DEBUG é–‹å•Ÿï¼šå·²é¡¯ç¤º DEV å‚™æ´å€å¡Š');
      }
    }
  };

  // DEV æ‰‹å‹•æ³¨å…¥
  $('#devInject').onclick = async ()=>{
    const code = $('#devCore').value;
    if(!code || !code.trim()){ alert('è«‹å…ˆè²¼ä¸Š core å…§å®¹'); return; }
    try{
      const core = await injectCoreCode(code);
      await runCore(core);
    }catch(e){
      log('â›” è·³éï¼šDEV æ³¨å…¥å¤±æ•—ï¼ˆ', e.message, 'ï¼‰');
    }
  };

  log('æ›¸ç±¤é¢æ¿ v1.9 å°±ç·’ï¼šè¼¸å…¥æª¢æ ¸ç¢¼ â†’ ç›´æ¥é©—è­‰ â†’ å–æ ¸å¿ƒ');
})();
